<html lang="en">
<head>
    <meta charset="utf-8">
    <title>KASH Book Store-Invoice</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="Invoicebus Invoice Template">
    <meta name="author" content="Invoicebus">

    <meta name="template-hash" content="ff0b4f896b757160074edefba8cfab3b">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/css/template.css">
</head>
<body>
    <div id="container">
        <div class="invoice-top">
            <section id="memo">
                <div class="logo">
                    <img src="~/images/logo.png" width="270px" />
                </div>

                <div class="company-info">
                    <span class="company-name">KASH Online Book Store</span>

                    <span class="spacer"></span>

                    <div>NIIT-Technologies</div>
                    <div>Greater Noida</div>


                    <span class="clearfix"></span>


                    <div>kash@gmail.com</div>
                </div>

            </section>

            <section id="invoice-info">
                <div>
                    <span>Issue Date</span>

                </div>

                <div>
                    <span>
                        <p id="demo"></p>
                        <script>
                            var d = new Date();
                            document.getElementById("demo").innerHTML = d;
                        </script><br>
                    </span>

                </div>

                <span class="clearfix"></span>

                <section id="invoice-title-number">

                    <span id="title">INVOICE</span>


                </section>
            </section>

            <section id="client-info">
                <span>Bill To:</span>
                <div>
                    <span class="bold"> @ViewBag.Customers.FirstName</span>
                </div>

                <div>
                    <span> @ViewBag.Customers.Address</span>
                </div>

                <div>
                    <span> @ViewBag.Customers.Email</span>
                </div>

                <div>
                    <span> @ViewBag.Customers.Contact</span>
                </div>


            </section>

            <div class="clearfix"></div>
        </div>

        <div class="clearfix"></div>
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <center>  <h3 class="panel-title"><strong>Order summary</strong></h3></center>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <td><strong>Book Name</strong></td>
                                        <td class="text-center"><strong>Book Quantity</strong></td>
                                        <td class="text-center"><strong>Unit Price</strong></td>
                                        <td class="text-center"><strong>Amount</strong></td>
                                        @*<td class="text-right"><strong>Totals</strong></td>*@
                                    </tr>
                                </thead>

                                <tbody>
                                    <br />
                                    @foreach (var item in ViewBag.cart)
                                    {
                                        <tr>

                                            <td>@item.Books.BookName</td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-center">@item.Books.BookPrice</td>
                                            <td class="text-center">@(item.Books.BookPrice * item.Quantity)</td>
                                            @*<td class="text-right">@ViewBag.total</td>*@
                                        </tr>

                                    }
                                    <br />
                                    @*<tr>
                                            <td>BS-400</td>
                                            <td class="text-center">$20.00</td>
                                            <td class="text-center">3</td>
                                            <td class="text-right">$60.00</td>
                                        </tr>
                                        <tr>
                                            <td>BS-1000</td>
                                            <td class="text-center">$600.00</td>
                                            <td class="text-center">1</td>
                                            <td class="text-right">$600.00</td>
                                        </tr>
                                        <tr>
                                            <td class="thick-line"></td>
                                            <td class="thick-line"></td>
                                            <td class="thick-line text-center"><strong>Subtotal</strong></td>
                                            <td class="thick-line text-right">$670.99</td>
                                        </tr>
                                        <tr>
                                            <td class="no-line"></td>
                                            <td class="no-line"></td>
                                            <td class="no-line text-center"><strong>Shipping</strong></td>
                                            <td class="no-line text-right">$15</td>
                                        </tr>*@

                                    <tr>

                                        <td class="no-line"></td>
                                        <td class="no-line"></td>


                                        <td class="no-line text-center"><strong>Total</strong></td>

                                        <td class="no-line text-center">@ViewBag.total</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />

        </div>

        <div class="checkout-right-basket animated wow slideInRight" data-wow-delay=".5s" style="float:right">
            <a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>Back To Home</a>
        </div>



        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="http://cdn.invoicebus.com/generator/generator.min.js?data=data.js"></script>
</body>
</html>
