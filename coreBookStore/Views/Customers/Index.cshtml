@model IEnumerable<coreBookStore.Models.Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2><center><b><u>List Of Customers</u></b></center></h2>
<br />
<br />
<table class="table table-striped">

    <thead>
        <tr>
            <th><label for="CustomerId">Customer's Id</label></th>
            <th><label for="CustomerName">Customer's Name</label></th>
            <th><label for="Actions">Actions</label></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.CustomerId)</td>
                <td> @Html.DisplayFor(modelItem => item.FirstName)</td>
                @*<td> @Html.DisplayFor(modelItem => item.AuthorDescription)</td>
                    <td> @Html.DisplayFor(modelItem => item.AuthorImage)</td>*@


                <td>


                    <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-primary">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>


