@model coreBookStore.Models.Author

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<br />

<h2><center><b><u>Edit Author</u></b></center></h2>
<br />

<form asp-controller="Author" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor(model => Model.AuthorId)
    <div class="form-group">
        <label asp-for="AuthorName"><b>Author's Name</b></label>
        <input type="text" asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorDescription"><b>Author's Description</b></label>
        <input type="text" asp-for="AuthorDescription" class="form-control" />
        <span asp-validation-for="AuthorDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorImage"><b>Author's Image</b></label>
        <input type="text" asp-for="AuthorImage" class="form-control" />
        <span asp-validation-for="AuthorImage" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Author" asp-action="Index" class="btn btn-primary">Back To List</a>
</form>


