<form asp-action="Edit" asp-controller="BookCategory">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor(model => Model.BookCategoryId)

    <div class="form-group">
        <label asp-for="BookCategoryName"><b>Category Name</b></label>
        <input type="text" asp-for="BookCategoryName" class="form-control" placeholder="Enter Category Name">
        <span asp-validation-for="BookCategoryName" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="BookCategoryDescription"><b>Category Description</b></label>
        <input type="text" asp-for="BookCategoryDescription" class="form-control" placeholder="Enter Category Description">
        <span asp-validation-for="BookCategoryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookCategoryImage"><b>Category Image</b></label>
        <input type="text" asp-for="BookCategoryImage" class="form-control" placeholder="Enter Category Image">
        <span asp-validation-for="BookCategoryName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="BookCategory" asp-action="Index" class="btn btn-primary">Back To List</a>
</form>
