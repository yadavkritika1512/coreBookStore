<form asp-action="Edit" asp-controller="Book">

    @Html.HiddenFor(model => Model.BookId)

    <div class="form-group">
        <label asp-for="BookName"><b>Book Name</b></label>
        <input type="text" asp-for="BookName" class="form-control" placeholder="Enter Book Name">
    </div>

    <div class="form-group">
        <label asp-for="BookDescription"><b>Book Description</b></label>
        <input type="text" asp-for="BookDescription" class="form-control" placeholder="Enter Book Description ">
    </div>

    <div class="form-group">
        <label asp-for="BookPrice"><b>Book Price</b></label>
        <input type="text" asp-for="BookPrice" class="form-control" placeholder="Enter Book Price">
    </div>
    <div class="form-group">
        <label asp-for="BookImage"><b>Book Image</b></label>
        <input type="text" asp-for="BookImage" class="form-control" placeholder="Upload Book Image">
    </div>

    <p><b>Book Type</b></p>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="BookType" value="  E-Book" checked>
        <label class="form-check-label" for="BookType">
            E-Book
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="BookType" value="Hard-Copy">
        <label class="form-check-label" for="BookType">
            Hard-Copy
        </label>
    </div>

    <label asp-for="AuthorId"><b>Author's Name</b></label>
    @*<input type="text" asp-for="AuthorId" />*@
    <select asp-for="AuthorId" asp-items="ViewBag.authors"></select>
    <br />
    <br />
    <label asp-for="PublicationId"><b>Publication's Name</b></label>
    @*<input type="text" asp-for="AuthorId" />*@
    <select asp-for="PublicationId" asp-items="ViewBag.publications"></select>
    <br />
    <br />
    <label asp-for="BookCategoryId"><b>Book Category</b></label>
    @*<input type="text" asp-for="AuthorId" />*@
    <select asp-for="BookCategoryId" asp-items="ViewBag.categorys"></select>
    <br />


    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-primary">Back To List</a>
</form>
