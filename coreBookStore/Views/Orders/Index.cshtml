@model IEnumerable<coreBookStore.Models.Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><center><b><u>List Of Orders</u></b></center></h2>
<br />
<br />
<table class="table table-striped">

    <thead>
        <tr>
            <th><label for="OrderId">Order Id</label></th>
            <th><label for="OrderDate">Order Date</label></th>
            <th><label for="CustomerId">Customer Id</label></th>
            <th><label for="Actions">Actions</label></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.OrderId)</td>
                <td> @Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td> @Html.DisplayFor(modelItem => item.CustomerId)</td>


                <td>


                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-primary">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>

